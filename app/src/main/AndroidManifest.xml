<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heysweetie.android">
    <!-- 第三方接口Bmob所需权限 -->
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".HeySweetieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HeySweetie">
        <activity android:name=".ui.client.ClientInfoManageActivity"></activity>
        <activity android:name=".ui.admin.AdminManageDetailActivity" />
        <activity android:name=".ui.admin.AdminManageActivity" />
        <activity android:name=".ui.admin.OrderManageActivity" />
        <activity android:name=".ui.client.ClientGoodsOrderActivity" />
        <activity android:name=".ui.admin.GoodsManageDetailActivity" />
        <activity android:name=".ui.client.ShopCartActivity" />
        <activity android:name=".ui.common.GoodsDetailActivity" />
        <activity android:name=".ui.admin.GoodsManageActivity" />
        <activity android:name=".ui.admin.AdminMainActivity" />
        <activity android:name=".ui.client.ClientMainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity" />

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.heysweetie.android.BmobContentProvider" />
    </application>

</manifest>